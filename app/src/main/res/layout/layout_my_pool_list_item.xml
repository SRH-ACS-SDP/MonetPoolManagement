<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/ll_my_pool_list">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_pools_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="18dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardPreventCornerOverlap="false"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow android:padding="10dp"
                android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="Pool Name"
                        style="@style/font15Black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_admin_pool_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="My Pool Name"
                        style="@style/font15Blue" />

                </TableRow>

                <TableRow android:padding="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/pool_id"
                        style="@style/font15Black" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_admin_pool_id"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        style="@style/font15Blue"
                        android:gravity="center_horizontal"
                        android:text="8"
                        android:textSize="15dp" />



                </TableRow>

            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

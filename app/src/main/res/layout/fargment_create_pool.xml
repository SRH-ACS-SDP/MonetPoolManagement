<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:fitsSystemWindows="true"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_name" />

            <EditText
                android:id="@+id/et_create_pool_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/pool_duration" />

            <EditText
                android:id="@+id/et_create_pool_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/edittext_background"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/pool_months"
                android:textColor="@color/black" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_strength" />

            <EditText
                android:id="@+id/et_create_pool_strength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background"
                android:inputType="number" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_individualShare" />

            <EditText
                android:id="@+id/et_create_pool_individual_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background"
                android:inputType="number" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_monthly_takeaway" />

            <TextView
                android:id="@+id/tv_create_pool_takeaway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_start_date" />

            <EditText
                android:id="@+id/et_create_pool_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/date_format" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_end_date" />

            <TextView
                android:id="@+id/tv_create_pool_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_meet_up" />

            <EditText
                android:id="@+id/et_create_pool_meet_up_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background"
                android:hint="@string/only_date"
                android:inputType="number" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_deposit_date" />

            <EditText
                android:id="@+id/et_create_pool_deposit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/only_date"
                android:inputType="number" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />


            <TextView
                style="@style/font20Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/pool_late_fee" />

            <EditText
                android:id="@+id/et_create_pool_late_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_background"
                android:hint="@string/only_date"
                android:inputType="number" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/jumbo" />

            <Button
                android:id="@+id/bt_create_pool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:enabled="false"
                android:text="@string/create_pool" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>
